---
import Section from "./Section.astro";
---

<Section dark={true}>
  <footer>
    <div class="icons-container">
      <a href="mailto:mohamad@badran.io"><img src="./images/icons/email.svg" alt="email icon" /></a>
      <a href="https://github.com/bdrn"><img src="./images/icons/github.svg" alt="github icon" /></a
      >
      <a href="https://linkedin.com/in/mohbadran"
        ><img src="./images/icons/linkedin.svg" alt="linkedin icon" /></a
      >
    </div>
    <p class="rights-text">Copyright Â© {new Date().getFullYear()} Mohamad Badran</p>
    <p class="credits-text">Images: Flaticon.com</p>
  </footer>
</Section>

<style>
  footer {
    display: flex;
    align-items: center;
    flex-direction: column;

    .icons-container {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
      align-items: center;
    }

    .credits-text {
      color: var(--light);
      margin-top: 8px;
      font-size: 14px;
    }

    @media screen and (max-width: 500px) {
      .icons-container {
        flex-direction: column;
        gap: 4px;
        img {
          height: 20px;
        }
      }
    }
  }
</style>
