---
import Container from "./Container.astro";

// Get the current pathname to determine which nav item should be active
const currentPath = Astro.url.pathname;

// Helper function to check if a path is active
const isActive = (path: string) => {
  if (path === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(path);
};
---

<nav class="nav">
  <Container>
    <div class="nav-container">
      <div>
        <a href="/"><img src="/images/ASTRA.svg" alt="logo" /></a>
      </div>
      <ul class="nav-items">
        <li><a href="/projects" class={isActive("/projects") ? "active" : ""}>Projects</a></li>
        <li><a href="/blog" class={isActive("/blog") ? "active" : ""}>Blog</a></li>
        <li><a href="/contact" class={isActive("/contact") ? "active" : ""}>Contact</a></li>
      </ul>
    </div>
  </Container>
</nav>

<style>
  .nav {
    background-color: var(--secondary);

    img {
      height: 20px;
    }

    .nav-container {
      display: flex;
      padding: 24px 0;
      justify-content: space-between;
      align-items: center;

      .nav-items {
        list-style-type: none;
        display: flex;
        gap: 24px;
      }

      a {
        text-decoration: none;
        display: flex;
        gap: 24px;
        color: var(--dark);
        transition: color 0.3s ease;
      }

      a:hover {
        color: var(--primary);
      }

      a.active {
        color: var(--primary);
      }
    }

    @media screen and (max-width: 500px) {
      & {
        flex-direction: column;
        gap: 16px;
      }
    }
  }
</style>
