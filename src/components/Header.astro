---
import ButtonLink from "../components/ButtonLink.astro";
import Section from "../components/Section.astro";
---

<Section>
  <header id="header">
    <div class="content">
      <h1>
        <h1>
          <span>hi, i'm mohamad,</span><br />
          <span><span class="accent">developer</span> & enthusiast.</span>
        </h1>
      </h1>
      <p class="description">
        Welcome to my personal portfolio website. Here youâ€™ll find a showcase of my projects,
        skills, and creative work. I enjoy designing and building modern, minimalistic, and
        high-performing digital experiences. This site highlights my work, shares insights from my
        learning journey, and reflects my passion for continuous growth and exploration.
      </p>
      <div class="button-container">
        <ButtonLink href="/projects" text="View projects" variant="secondary" />
        <!--<ButtonLink href="/resume.pdf" text="Download resume" variant="primary" isDownload /> -->
      </div>
    </div>
    <img src="/images/me.png" alt="picture of me" />
  </header>
</Section>

<style>
  img {
    max-width: 350px;
    height: 350px;
  }

  #header {
    display: grid;
    grid-template-columns: 540px 1fr;
    justify-items: center;
    gap: 80px;
    align-items: center;

    h1 {
      font-size: 44px;
      margin-bottom: 30px;
      display: flex-column;
    }

    .accent {
      color: var(--primary);
    }

    .button-container {
      display: flex;
      gap: 10px;
    }

    .description {
      line-height: 28px;
      color: var(--dark);
      margin-bottom: 30px;
    }

    @media (max-width: 1000px) {
      & {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        gap: 40px;

        img {
          grid-row: 1;
        }
      }
    }

    @media (max-width: 600px) {
      .button-container {
        flex-direction: column;
        gap: 10px;
      }
    }
  }
</style>
