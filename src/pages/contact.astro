---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Contact">
  <div class="contact-page">
    <div class="contact-content">
      <div class="social-icons">
        <a href="mailto:mohamad@badran.io" class="social-link" aria-label="email">
          <span class="icon" style="--icon: url('/images/icons/email.svg');"></span>
        </a>

        <a href="https://github.com/bdrn" class="social-link" aria-label="github" target="_blank">
          <span class="icon" style="--icon: url('/images/icons/github.svg');"></span>
        </a>

        <a
          href="https://linkedin.com/in/mohbadran"
          class="social-link"
          aria-label="linkedin"
          target="_blank"
        >
          <span class="icon" style="--icon: url('/images/icons/linkedin.svg');"></span>
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .contact-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--white);
    padding: 0;
  }

  .contact-content {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .social-icons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 60px;
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    transform: scale(1.1);
    opacity: 1;
  }

  .icon {
    width: 80px;
    height: 80px;
    display: inline-block;
    background-color: var(--dark);
    -webkit-mask: var(--icon) no-repeat center / contain;
    mask: var(--icon) no-repeat center / contain;
    transition: background-color 0.2s ease;
  }

  @media screen and (max-width: 700px) {
    .social-icons {
      gap: 40px;
    }

    .icon {
      width: 60px;
      height: 60px;
    }
  }

  @media screen and (max-width: 600px) {
    .social-icons {
      gap: 30px;
      flex-direction: column;
    }

    .icon {
      width: 50px;
      height: 50px;
    }
  }

  .social-link:hover .icon {
    background-color: var(--primary);
  }
</style>
